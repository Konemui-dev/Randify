{
    "manifest_version" : 3,
    "name" : "Randify",
    "version" : "1.0",
    "description" : "This is Randify an extension that allows you to upload random images and cover youtube video Thumbnails with them.",
    "action" : {
        "default_popup" : "popup.html",
        "default_icon" : "icons/icon-16.png"
    },
    "icons" : {
        "16" : "icons/icon-16.png",
        "32" : "icons/icon-32.png",
        "48" : "icons/icon-48.png",
        "64": "icons/icon-64.png",
        "96": "icons/icon-96.png"
    },
    "content_scripts" : [
        {
            "js" : ["content.js"],
            "matches" : [
                "https://www.youtube.com/*",
                "https://www.twitch.tv/*"
            ]
        }
    ]
}